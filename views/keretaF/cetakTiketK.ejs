<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/cetaktiketK.css">
    <link rel="icon" href="/assets/logo1.svg" type="image/svg+xml" sizes="2x2">
    <title>Tiket Pesawat | Pigi Pigi</title>
</head>
<body>
   <!--Navbar -->
   <% if (ket == 'cekorder') { %>
    <%- include('../partials/secondNavbar',  {page: 'cekorder'}); %>
  <% } else { %>
   <%- include('../partials/tiketNavbar',  {page: 'cetak'}); %>
  <% } %>

  <div id="background-loading">
    <span class="loading-text">LOADING</span>
    <div class="loader"></div>
  </div>

  <br>

  <div class="container2">
    <div class="row-navTiket">
      <div class="col-logoPigi">
        <img src="/assets/logo2.svg" width="170" height="170">      
      </div>
      <div class="col etiket text-right">
        <h4>E-Tiket</h4>
        <h6>Kereta Api</h6>
      </div>
    </div>
    <div class="line"></div>
    <div class="row box">
      <div class="col dataPemesan">
        <h5 class="judul">Data Pemesan</h5>
        <div class="tabel">
          <table class="table-bordered">
            <tr>
              <th class="colTab">Title</th>
              <td class="isiTab"> <%= dataPemesan[0].titlePemesan %></td>
            </tr>
            <tr>
              <th class="colTab">Nama</th>
              <td class="isiTab"><%= dataPemesan[0].namadepPemesan %> <%= dataPemesan[0].namabelPemesan %></td>
            </tr>
            <tr>
              <th class="colTab">Nomor HP</th>
              <td class="isiTab"> 0<%= dataPemesan[0].notelPemesan %></td>
            </tr>
            <tr>
              <th class="colTab">Email</th>
              <td class="isiTab"> <%= dataPemesan[0].emailPemesan %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="col barcode">
        <h4 class="judulorder">Order ID</h4>
        <h3 class="judulorder1"> <%= orderID %> </h3>
          
        <img class="GBarcode" src="/assets/barcode (2).png">
        <p ><%= dataK[0].ruteID %></p>
      </div>
    </div>

    <div class="box kedua">
      <h5 class="judul">Data Perjalanan</h5>
        <table class="table table-striped text-center boxdata2">
          <thead class="thead-dark">
            <tr>
              <th>Tanggal</th>
              <th>Nama Kereta</th>
              <th>Berangkat</th>
              <th>Tiba</th>
            </tr>
          </thead>
            <tr>
              <td><%= dataPenumpang[0].tanggalK %></td>
              <td><%= dataK[0].kereta.namaKereta %></td>
              <td><%= dataK[0].jamBerangkat %> WIB<br><%= dataK[0].asal.namaKota %><br><%= dataK[0].asal.namaStasiun %></td>
              <td><%= dataK[0].jamTiba %> WIB<br><%= dataK[0].tujuan.namaKota %><br><%= dataK[0].tujuan.namaStasiun %></td>
            </tr>  
        </table>
    </div>
    <div class="box ketiga" style="margin-top: 3%;">
      <h5 class="judul">Data Penumpang</h5>
        <table class="table table-striped boxdata2">
          <thead class="thead-dark">
            <tr>
              <th>No</th>
              <th>Nama Penumpang</th>
              <th class="text-center">No. Tiket</th>
              <th class="text-center">Kelas</th>
           </tr>
          </thead>
         <% dataPenumpang.forEach((data, index) => { %>
            <tr>
              <th><%= index + 1 %></th>
              <td><%= data.titleK%> <%= data.namadepK %> <%= data.namabelK %> </td>
              <td class="text-center"><%= data.tiketpid %></td>
              <td class="text-center"><%= dataK[0].kelas%></td>
            </tr>
         <% }) %>
        </table>
    </div>
  </div>
  
  
<br><hr>
  <!-- Footer -->
  <%- include('../partials/footer',  {page: 'kontak'}); %>
  
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="/js/cetaktiket.js"></script>
  </body>
</html>